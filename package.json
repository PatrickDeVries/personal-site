{
  "name": "personal-site",
  "version": "0.1.0",
  "homepage": "http://www.patrickdevries.com/",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "predeploy": "bun lint && bun run build",
    "deploy": "gh-pages -d dist",
    "format": "prettier --write .",
    "lint:code": "eslint .",
    "lint:styles": "stylelint .",
    "lint:format": "prettier --check .",
    "lint:types": "tsc --noEmit",
    "lint": "concurrently -g -c auto -n \"format,code,styles,types\" \"bun lint:format\" \"bun lint:code\" \"bun lint:styles\" \"bun lint:types\""
  },
  "dependencies": {
    "@react-three/fiber": "^8.15.12",
    "babel-plugin-styled-components": "^2.1.4",
    "bun-types": "^1.0.19",
    "concurrently": "^8.2.2",
    "gh-pages": "^6.1.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "polished": "^4.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.21.1",
    "styled-components": "^6.1.3",
    "three": "^0.160.0",
    "typescript": "^5.3.3",
    "valtio": "^1.12.1",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "prettier-plugin-organize-imports": "^3.2.4",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/lodash": "^4.14.202",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/three": "^0.160.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-plugin-macros": "^3.1.0",
    "eslint": "^8.56.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "postcss-styled-syntax": "^0.5.0",
    "prettier": "^3.1.1",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^35.0.0",
    "vite": "^5.0.10"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
