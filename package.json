{
  "name": "personal-site",
  "version": "0.1.0",
  "homepage": "http://www.patrickdevries.com/",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "predeploy": "bun lint && bun run build",
    "deploy": "gh-pages -d dist",
    "format": "biome format --write .",
    "format:changed": "biome format --changed --write .",
    "fix": "biome check --apply .",
    "fix:changed": "biome check --changed --apply .",
    "lint:styles": "stylelint .",
    "lint:code": "biome lint .",
    "lint:format": "biome format .",
    "lint:check": "biome check .",
    "lint:types": "tsc --noEmit",
    "lint": "concurrently -g -c auto -n \"check,styles,types\" \"bun lint:check\" \"bun lint:styles\" \"bun lint:types\"",
    "lint:changed:code": "biome lint --changed .",
    "lint:changed:format": "biome format --changed .",
    "lint:changed:check": "biome check --changed ."
  },
  "dependencies": {
    "@react-three/fiber": "^8.15.12",
    "@yobgob/too-many-hooks": "^0.0.1",
    "lodash-es": "^4.17.21",
    "polished": "^4.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.21.1",
    "styled-components": "^6.1.3",
    "three": "^0.160.0",
    "valtio": "^1.12.1",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.0",
    "@types/bun": "^1.0.10",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/three": "^0.160.0",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-styled-components": "^2.1.4",
    "concurrently": "^8.2.2",
    "gh-pages": "^6.1.1",
    "postcss-styled-syntax": "^0.5.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^35.0.0",
    "vite": "^5.0.10",
    "vite-plugin-open-graph": "^2.0.4"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  },
  "trustedDependencies": ["@biomejs/biome"]
}
